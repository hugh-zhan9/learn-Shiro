<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hugh.springboot_shiro_thymeleaf.dao.UserDao">
    
    <resultMap id="userMap" type="com.hugh.springboot_shiro_thymeleaf.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <collection property="roles" javaType="list" ofType="com.hugh.springboot_shiro_thymeleaf.entity.Role">
            <id column="roleid" property="id"></id>
            <result column="name" property="name"></result>
        </collection>
    </resultMap>


    <insert id="save" parameterType="com.hugh.springboot_shiro_thymeleaf.entity.User" keyProperty="id" useGeneratedKeys="true">
        insert into t_user values(#{id},#{username},#{password},#{salt})
    </insert>

    <select id="login" resultType="com.hugh.springboot_shiro_thymeleaf.entity.User">
        select * from t_user where username = #{username}
    </select>
    
    <select id="findRolesByUserName" resultMap="userMap">
        select u.id as id, u.username as username, r.id as roleid, r.name as name from t_user u left join t_role_user ru on u.id=ru.userid
    left join t_role r on ru.roleid=r.id where u.username= #{username}
    </select>
    
    <select id="findByPermsByRoleId" resultType="com.hugh.springboot_shiro_thymeleaf.entity.Perms">
        select p.id as id, p.name as name,p.url as url from t_role r
        left join t_role_perms rp on r.id = rp.roleid
        left join t_perms p on rp.permsid = p.id where r.id = #{id}
    </select>

</mapper>